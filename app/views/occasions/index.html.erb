  <div class="col-sm-9 col-sm-offset-3 col-lg-10 col-lg-offset-2 main" style="<%= 'margin: 0' if !user_signed_in? %>">     
    
    <div class="row">
      <ol class="breadcrumb">
        <li><a href="#"><svg class="glyph stroked home"><use xlink:href="#stroked-home"></use></svg></a></li>
        <li class="active">Icons</li>
      </ol>
    </div><!--/.row-->

<p id="notice"><%= notice %></p>


  <div class="panel panel-green">
    <div class="panel-heading">My Events</div>
      <div class="panel-body">

        <table class="table table-hover table-bordered">
          <thead>
            <tr>
              <th>Name</th>
              <th>Description</th>
              <th>Venue</th>
              <th>Time Start</th>
              <th>Time End</th>
              <th colspan="3"></th>
            </tr>
          </thead>

          <tbody>
            <% @occasions.each do |occasion| %>
              <tr>
                <td><%= occasion.name %></td>
                <td><%= occasion.description %></td>
                <td><%= occasion.venue %></td>
                <td><%= occasion.time_start %></td>
                <td><%= occasion.time_end %></td>
                <td><%= link_to 'Show', occasion %></td>
                <td><%= link_to 'Edit', edit_occasion_path(occasion) %></td>
                <td><%= link_to 'Remove', occasion, method: :delete, data: { confirm: 'Are you sure?' } %></td>
              </tr>
            <% end %>
          </tbody>
        </table>
        <%= link_to 'Add Occasion', new_occasion_path, class: "btn btn-primary col-md-offset-5" %>
      </div>     

    </div>
 

<br>



</div>
