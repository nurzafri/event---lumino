  <div class="col-sm-9 col-sm-offset-3 col-lg-10 col-lg-offset-2 main" style="<%= 'margin: 0' if !user_signed_in? %>">     
    
    <div class="row">
      <ol class="breadcrumb">
        <li><a href="#"><svg class="glyph stroked home"><use xlink:href="#stroked-home"></use></svg></a></li>
        <li class="active">Icons</li>
      </ol>
    </div><!--/.row-->
                      
                      <div class="panel panel-green">
                        <div class="panel-heading">List Of Events</div>
                          <div class="panel-body">
                            
                            <table class="table table-hover table-bordered">
                              <thead>
                                <tr>
                                  <th>Name</th>
                                  <th>Description</th>
                                  <th>Venue</th>
                                  <th>Time Start</th>
                                  <th>Time End</th>
                                  <th>Organizer</th>
                                  <th></th>
                                </tr>
                              </thead>

                              <tbody>
                                <% @occasions.each do |occasion| %>
                                  <tr>
                                    <td><%= occasion.name %></td>
                                    <td><%= occasion.description %></td>
                                    <td><%= occasion.venue %></td>
                                    <td><%= occasion.time_start %></td>
                                    <td><%= occasion.time_end %></td>
                                    <td><%= occasion.organization.name %></td>
                                    <td><%= link_to 'Info', occasion, class: "btn btn-info btn-xs" %></td>
                                  </tr>
                                <% end %>
                              </tbody>
                            </table>

                          </div>
                        </div>
                        <br>
                </div>
